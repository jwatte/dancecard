{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"outDir": "dist",
		"sourceMap": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,
		"types": ["vite/client", "vitest/globals", "node"],
		"pretty": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
